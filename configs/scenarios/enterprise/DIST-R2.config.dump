device:
  name: DIST-R2
  type: router
  model: cisco-2921
  location: building-b

interfaces:
  - name: GigabitEthernet0/0/0
    type: ethernet
    ip_address: 10.1.2.2
    subnet_mask: 255.255.255.252
    bandwidth: 1000
    status: up
    description: "Link to CORE-R1"
    mtu: 1500
    
  - name: GigabitEthernet0/1/0
    type: ethernet
    ip_address: 10.30.1.1
    subnet_mask: 255.255.255.0
    bandwidth: 1000
    status: up
    description: "VLAN 30 Gateway"
    mtu: 1500
    
  - name: GigabitEthernet0/1/1
    type: ethernet
    ip_address: 10.99.1.1
    subnet_mask: 255.255.255.0
    bandwidth: 1000
    status: up
    description: "VLAN 99 Management Gateway"
    mtu: 1500
    
  - name: GigabitEthernet0/2/0
    type: ethernet
    ip_address: 10.1.5.1
    subnet_mask: 255.255.255.252
    bandwidth: 1000
    status: up
    description: "Link to ACCESS-SW3"
    mtu: 1500

routing:
  protocols:
    - type: ospf
      process_id: 1
      router_id: 3.3.3.3
      networks:
        - network: 10.1.0.0
          wildcard: 0.0.255.255
          area: 0
        - network: 10.30.0.0
          wildcard: 0.0.255.255
          area: 0
        - network: 10.99.0.0
          wildcard: 0.0.255.255
          area: 0