device:
  name: DIST-R1
  type: router
  model: cisco-2921
  location: building-a

interfaces:
  - name: GigabitEthernet0/0/0
    type: ethernet
    ip_address: 10.1.1.2
    subnet_mask: 255.255.255.252
    bandwidth: 1000
    status: up
    description: "Link to CORE-R1"
    mtu: 1500
    
  - name: GigabitEthernet0/1/0
    type: ethernet
    ip_address: 10.10.1.1
    subnet_mask: 255.255.255.0
    bandwidth: 1000
    status: up
    description: "VLAN 10 Gateway"
    mtu: 1500
    
  - name: GigabitEthernet0/1/1
    type: ethernet
    ip_address: 10.20.1.1
    subnet_mask: 255.255.255.0
    bandwidth: 1000
    status: up
    description: "VLAN 20 Gateway"
    mtu: 1500
    
  - name: GigabitEthernet0/2/0
    type: ethernet
    ip_address: 10.1.3.1
    subnet_mask: 255.255.255.252
    bandwidth: 1000
    status: up
    description: "Link to ACCESS-SW1"
    mtu: 1500
    
  - name: GigabitEthernet0/2/1
    type: ethernet
    ip_address: 10.1.4.1
    subnet_mask: 255.255.255.252
    bandwidth: 1000
    status: up
    description: "Link to ACCESS-SW2"
    mtu: 1500

routing:
  protocols:
    - type: ospf
      process_id: 1
      router_id: 2.2.2.2
      networks:
        - network: 10.1.0.0
          wildcard: 0.0.255.255
          area: 0
        - network: 10.10.0.0
          wildcard: 0.0.255.255
          area: 0
        - network: 10.20.0.0
          wildcard: 0.0.255.255
          area: 0